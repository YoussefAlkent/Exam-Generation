class ExamGenerator:
    def __init__(self, retriever):
        self.retriever = retriever

    def generate_questions(self, topic, num_questions=5):
        documents = self.retriever.retrieve_documents(topic)
        questions = []
        
        for doc in documents:
            questions.extend(self._create_questions_from_doc(doc, num_questions))
        
        return questions

    def _create_questions_from_doc(self, doc, num_questions):
        # Placeholder for question generation logic
        return [f"What is the main idea of the document titled '{doc.title}'?" for _ in range(num_questions)]